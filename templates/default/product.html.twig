{% extends 'base.html.twig' %}

    {% block title %}{{product.title}}{% endblock %}

    {% block body %}

        {% include 'default/parts/store-headers-logic.html.twig' %}

    <section>
        <div id="fiche-produit" class="fiche-produit-classic">
            <div class="container my-2">
                <h3 class="my-5">{{product.category.parentCategory.name}} > {{product.category.name}} > {{product.brand.name}}</h3>
                <div class="row">
                    <div class="col-12">
                        <div class="row">

                            <div class="col-2 d-flex thumbnails ">
                                <div class="row">
                                    <div class="col-6">
                            {% for picture in product.pictures %}

                                <div class="mb-auto pt-2 pt-sm-0 w-100">
                                    <img src="{{asset('img/uploads/product/' ~ picture.href )}}"
                                        class="w-100 p-1 border rounded my-1 my-xl-2 "
                                        alt="{{ picture.alt }}">
                                </div>

                            {% endfor %}
                                    </div>
                                </div>
                            </div>

                            <div class="col-5 main-picture mt-4 mb-5">
                                <div class="row">
                                    <div class="col-10">
                                    {% for picture in product.pictures %}
                                        {% if picture.isFront == true %}
                                        <img class="d-block w-100" src="{{asset('img/uploads/product/' ~ picture.href )}}" alt="{{ picture.alt }}">
                                        {% endif %}
                                    {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="row py-2">
                                    <div class="col-12">
                                        <h1>
                                       {{product.title}}
                                        </h1>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 text-dark mt-2">
                                        <p>
                                        {{product.description}}
                                        </p>
                                    </div>
                                </div>

                                <div class="row py-3 mt-4">
                                    <div class="col-4 col-xl-3">
                                        <h6 class="text-grey small d-block">
                                            Prix TTC
                                        </h6>
                                        <p class="h3 font-weight-bold d-block mb-0">
                                        {{product.HTprice+product.HTprice*0.2|number_format(2,'.')}}â‚¬
                                        </p>
                                    </div>
                                    <!--avis des clients-->
                                    <div class="col-8 col-xl-9 small text-grey d-flex justify-content-end align-items-end">
                                        <p class="h3 font-weight-bold d-block mb-0">
                                        {% include 'default/parts/stars.html.twig' %}
                                        </p>
                                    </div>
                                </div>
                                <div class="text-grey d-flex justify-content-end align-items-end mt-5">
                                    <a href="{{ path('cart_add', {'id': product.id})}}" class="btn panier">Panier</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}