{% extends 'base.html.twig' %}

{% block title %}Mettre à jour mes données{% endblock %}

{% block body %}
    {% include 'default/parts/header-account.html.twig' %}
    <main>
        <div class="container my-5 d-flex justify-content-center">

            <div class="row">

                <h1 class="h3 text-center">Mettre à jour l'adresse pour {{address.user.title}} {{address.user.firstname}} {{address.user.lastname}}</h1>
                <div class="col-12">
                    <div class="card shadow-lg my-3 card-account">
                        <div class="row g-0">
                            <div class="col-lg-4">
                                <img src="{{ asset('img/terre.jpg') }}" class="img-fluid rounded-circle p-2" alt="boutique" />
                            </div>
                            <div class="col-lg-8">
                                <div class="card-body">
                                    <h5 class="text-uppercase text-decoration-underline card-title text-end me-5">Mes informations</h5>
                                    <p class="card-body d-flex justify-content-center">
                                        {{ include('default/user/_form-address.html.twig', {'button_label': 'Update'}) }}
                                    </p>
                                </div>
                                <div class="card-body text-center">
                                    <a href="{{ path('show_user', {'id': app.user.id}) }}" class="text-white">Retour</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 my-5">
                    <h4 class="text-center mt-5">Quelques produits qui pourraient vous plaire :</h4>
                    {% include 'default/parts/best-sellers.html.twig'%}
                </div>
            </div>

        </div>

    </main>

{% endblock %}