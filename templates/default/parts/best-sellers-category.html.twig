<section> 
    <div class="container my-5 text-center">
        <h4 class="text-center">Nos meilleures ventes de la boutique {{category.parentCategory.name}}</h4>
            <div class="row d-flex justify-content-center">
                {% for product in products %}
                    {% if product.isFlash == 1 and product.category.parentCategory == category.parentCategory %}
                        <div class="col-lg-2 col-sm-4">
                            <div class="card shadow-lg">
                                <a href="{{ path('show_product', {'id': product.id})}}">
                                    {% for picture in product.pictures %}
                                        {% if picture.isFront == 1  %}
                                            <img src="{{asset('img/uploads/product/' ~ picture.href )}}" width="150" height="150" alt="produit phare"/>
                                        {% endif %}
                                    {% endfor %}
                                </a>
                            <div class="card-body">
                                <p><strong>{{ product.TTCPrice|number_format(2,'.')}} â‚¬</strong></p>
                                <p>{% include 'default/parts/stars.html.twig' %}</p>
                                <p>{{ product.title }}</p>

                            </div>
                                <div class="text-end align-items-end mb-2 me-2">
                                    <a href="{{ path('show_product', {'id': product.id})}}" class="panier btn">Voir + </a>
                                </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>