
        {# menu de navigation produits #}
        <section class="sticky-top">
            <div class="container navbarTop mb-5">
                <nav id="navbar_top" class="navbar navbar-expand-xl">
                    <a href="{{ path ('default') }}" class="navbar-brand px-5">Accueil</a>
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse"
                        data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon navbar-dark"></span>
                    </button>

                    {# menus déroulants par catégories#}
                    <div id="navbarCollapse" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav px-5">
                            {% for category in categories %}
                            <li class="nav-item dropdown">
                                {% if category.parentCategory == NULL %}
                                    <a href="{{ path('show_category', {'id': category.id})}}" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">{{category.name}}</a>
                                {% else %}
                                    {% if category.parentCategory.id != NULL and category.id == category.parentCategory.id %}
                                        <div class="dropdown-menu">
                                            {% for childCategory in category %}
                                            <a href="{{ path('show_category', {'id': category.id})}}" class="dropdown-item">{{childCategory.name}}</a>
                                            {% endfor %}
                                        </div>
                                    {% endif %} 
                                {% endif %}
                            </li>
                            {% endfor %}
                        </ul>

                        {# item de menu tout à droite #}
                        <ul class="nav navbar-nav ms-auto">
                            <li class="nav-item">
                                <a href="" class="nav-link text-center" aria-current="page"><img
                                        src="{{ asset('img/icons/cart.png') }}" width="50" height="50" alt="Panier"
                                        class="cart"></br>Panier</a>
                            </li>
                            <li class="nav-item"><a class="nav-link text-center" href=""><img src="{{ asset('img/icons/account.png') }}" width="50" height="50" alt="Compte" class="" ></br>Mon compte</a></li>
                            <li class="nav-item"><a class="nav-link text-center" href=""><img src="{{ asset('img/icons/account.png') }}" width="50" height="50" alt="Compte" class="" ></br>Se connecter</a></li>
                        </ul>
                    </div>
                </nav>
            </div>
        </section>
