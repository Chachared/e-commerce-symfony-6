<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}LNA - Administration{% endblock %}</title>
        {% block stylesheets %}
            
            <link href="{{ asset('bootstrap5/css/bootstrap.min.css') }}" rel="stylesheet">
            <link href="{{ asset('css/style.css') }}" rel="stylesheet">
            <link href="{{ asset('fontawesome5/css/all.css') }}" rel="stylesheet" type="text/css">
            <link href="{{ asset('fontawesome5/css/all.min.css') }}" rel="stylesheet" type="text/css">
            <link href="{{ asset('fontawesome5/css/brands.css') }}" rel="stylesheet" type="text/css">
        {% endblock %}


    </head>
    <body>

        {% include 'admin/parts/header.html.twig' %}


            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-2 p-0 col-2 bg-dark">
                        {% include 'admin/parts/aside-nav.html.twig' %}
                    </div>
                    <div class="col-lg-10 p-0">
                        <div class="col-lg-10 col-sm-8 p-0">
                            <div class="container mt-3">
                                
                                    {% block body %}
                                    {% endblock %}
                                
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        

        {% include 'admin/parts/footer.html.twig' %}

        {% block javascripts %}
            <script rel="script" src="{{ asset('js/admin/jquery.min.js') }}"></script>
            <script rel="script" src="{{ asset('js/admin/jquery-easing.min.js') }}"></script>
            <script src="{{ asset('bootstrap5/js/bootstrap.bundle.js') }}" rel="script"></script>
            <script rel="script" src="{{ asset('js/thumbs.js') }}"></script>
        {% endblock %}
        
    </body>
</html>
