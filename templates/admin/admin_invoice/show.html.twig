{% extends 'base-admin.html.twig' %}

{% block title %}{{ parent() }} des commandes{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="col-12">
                <a href="{{ path('admin_invoice_index') }}" class="btn btn-back ms-3 mb-3">Retour</a>
                <h1 class="mb-3 ms-3">Détail de la facture</h1>
            </div>
        </div>

        <div class="col-6">
        <table class="table table-striped table-hover table ms-3">
            <tbody>
                <tr>
                <tr>
                    <th>Nom du client</th>
                    <td><strong>{{ invoice.user.firstname|u.truncate(2, '.') }} {{ invoice.user.lastname }}</strong></td>
                </tr>
                    <th>Date de la commande</th>
                    <td>{{ invoice.orderDate ? invoice.orderDate|date('d-m-Y') : '' }}</td>
                </tr>
                <tr>
                    <th>Montant total de la commande</th>
                    <td></td>

                </tr>
                <tr>
                    <th>Moyen de paiement</th>
                    <td>{{ invoice.paymentMethod }}</td>
                </tr>
            </tbody>
        </table>
        </div>

        <table class="table table-striped table-hover table ms-3">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Quantité</th>
                    <th>Prix total</th>
                </tr>
            </thead>
            <tbody>
            {% for productOrder in invoice.productOrders %}
                <tr>
                    <td>{{ productOrder.product.title|u.truncate(50, '...') }}</td>
                    <td>{{ productOrder.quantity }}</td>
                    <td>{{ productOrder.HTPrice|number_format(2,'.') }} €</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
