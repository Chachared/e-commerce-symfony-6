{% extends 'base-admin.html.twig' %}

{% block title %}Détail de la facture{% endblock %}

{% block body %}
    <h1>Détail de la facture</h1>
    <div class="col-12 d-flex justify-content-start">
        <a href="{{ path('admin_invoice_index') }}" class="btn btn-dark rounded-pill my-2 me-2">Retour</a>
    </div>
    <table class="table table-striped table-hover table-sm mt-2">
        <tbody>
            <tr>
                <th>Méthode de paiement</th>
                <td>{{ invoice.paymentMethod }}</td>
            </tr>
            <tr>
                <th>Date de la commande</th>
                <td>{{ invoice.orderDate ? invoice.orderDate|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
