{% extends 'base-admin.html.twig' %}

{% block title %}des utilisateurs{% endblock %}

{% block body %}

    <div class="container">

        <h1>Fiche utilisateur</h1>

                <div class="col-12 d-flex justify-content-start mb-3">
                    <a href="{{ path('admin_user_index') }}" class="btn btn-back my-2">Retour</a>
                    {{ include('admin/admin_user/_delete_form.html.twig') }}
                </div>

        <table class="table table-striped table-hover table-sm mt-2">
            <tbody>
                <tr>
                    <th>Nom d'utilisateur</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Rôle</th>
                    {% if user.hasRole('ROLE_ADMIN') %}
                    <td><strong>Administrateur</strong></td>
                    {% else %}
                    <td>Client</td>
                    {% endif %}
                </tr>
                <tr>
                    <th>Titre</th>
                    {% if user.title != null %}
                        <td>{{ user.title }}</td>
                    {% else %}
                        <td> - </td>
                    {% endif %}
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Date de naissance</th>
                    <td>{{ user.birthday ? user.birthday|date('d-m-Y') : '' }}</td>
                </tr>
                <tr>
                    <th>Date d'enregistrement</th>
                    <td>{{ user.registerDate ? user.registerDate|date('d-m-Y') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('admin_user_index') }}">Retour</a>
    </div>
{% endblock %}
