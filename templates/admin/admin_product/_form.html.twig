{{ form_start(form) }}

    <div class="container">
    <div class="form-group">

        <div class="my-2 me-3">
        {{ form_label (form.brand) }}
        </br>
        {{ form_widget (form.brand) }}
        <div class="form-error">
            {{ form_errors (form.brand) }}
        </div>
        </div>

        <div class="my-2 me-3">
        {{ form_label (form.category) }}
        </br>
        {{ form_widget (form.category) }}
        <div class="form-error">
            {{ form_errors (form.category) }}
        </div>
        </div>

        <div class="my-2 me-3 col-6">
        {{ form_label (form.title) }}
        {{ form_widget (form.title) }}
        <div class="form-error">
            {{ form_errors (form.title) }}
        </div>
        </div>

        <div class="my-2 me-3 col-6">
        {{ form_label (form.description) }}
        {{ form_widget (form.description) }}
        <div class="form-error">
            {{ form_errors (form.description) }}
        </div>
        </div>

        <div class="my-2 me-3 col-2">
        {{ form_label (form.HTprice) }}
        {{ form_widget (form.HTprice) }}
        <div class="form-error">
            {{ form_errors (form.HTprice) }}
        </div>
        </div>

        <div class="my-2 me-3 col-2">
        {{ form_label (form.stock) }}
        {{ form_widget (form.stock) }}
        <div class="form-error">
            {{ form_errors (form.stock) }}
        </div>
        </div>

        <div class="my-2 me-3">
        {{ form_label (form.isActive) }}
        {{ form_widget (form.isActive) }}
        <div class="form-error">
            {{ form_errors (form.isActive) }}
        </div>
        </div>

        <div class="my-2 me-3">
        {{ form_label (form.isFlash) }}
        {{ form_widget (form.isFlash) }}
        <div class="form-error">
            {{ form_errors (form.isFlash) }}
        </div>
        </div>

        <div class="my-2 me-3 col-2">
        {{ form_label (form.stars) }}
        </br>
        {{ form_widget (form.stars) }}
        <div class="form-error">
            {{ form_errors (form.stars) }}
        </div>
        </div>

        <div class="mt-2 me-3 col-4">
        {{ form_row(form.pictures )}}

            <ul id="picture-fields-list"
                data-widget-tags="{{ '<li></li>'|e }}"
                data-widget-counter="{{ form.pictures|length }}">
                {% for pictureField in form.pictures %}
                    <li>
                        {{ form_errors(pictureField) }}           
                    </li>
                {% endfor %}
            </ul>
            <button type="button"
                class="addPicture btn btn-secondary rounded-pill mb-2 mt-0"
                data-list-selector="#picture-fields-list">
                Ajouter une image
            </button>

        </div>

        <div class="my-2 me-3 col-2">
        {{ form_widget (form.save) }}
        </div>
        
    </div>
</div>

{{ form_end(form) }}
