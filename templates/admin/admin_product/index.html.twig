{% extends 'base-admin.html.twig' %}

{% block title %}{{ parent() }} des produits {% endblock %}

{% block heading %}
    Gestion des produits en base de donn√©e
{% endblock %}

{% block body %}
    <h1>Index des produits</h1>
    <a class="text-dark" href="{{ path('admin_product_new') }}">Ajouter un nouveau produit</a>
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Etoiles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.image }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.stars }}</td>
                <td>
                    <a class="text-dark" href="{{ path('admin_product_show', {'id': product.id}) }}">show</a>
                    <a class="text-dark" href="{{ path('admin_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
